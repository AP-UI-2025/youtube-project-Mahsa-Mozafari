<TabPane prefHeight="500.0" prefWidth="574.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.videoplayer.Panel.PublishPanel">
    <tabs>
        <Tab text="Video">
            <AnchorPane prefHeight="482.0" prefWidth="678.0">
                <VBox prefHeight="482.0" prefWidth="354.0" spacing="15" style="-fx-background-color: #F9F9F9; -fx-padding: 20;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="221.0" AnchorPane.topAnchor="0.0">
                    <TextField fx:id="titleVideo" promptText="Title" style="-fx-border-radius: 5; -fx-padding: 10; -fx-background-color: white; -fx-border-color: #ccc;" />
                    <TextField fx:id="descriptionVideo" promptText="Description" style="-fx-border-radius: 5; -fx-padding: 10; -fx-background-color: white; -fx-border-color: #ccc;" />
                    <TextField fx:id="durationVideo" promptText="Duration" style="-fx-border-radius: 5; -fx-padding: 10; -fx-background-color: white; -fx-border-color: #ccc;" />
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Button fx:id="chooseVideoBtn" onAction="#handleChooseFileForVideo" style="-fx-background-color: #FF0000; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" text="Choose File" />
                        <Label fx:id="videoPathLabel" style="-fx-text-fill: #555;" text="No file selected" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Button fx:id="chooseVideoThumbnailBtn" onAction="#handleChooseThumbnailForVideo" style="-fx-background-color: #FF0000; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" text="Choose Cover" />
                        <Label fx:id="videoThumbnailPathLabel" style="-fx-text-fill: #555;" text="No cover selected" />
                    </HBox>

                    <ComboBox fx:id="videoCategoryComboBox" promptText="Select Category" style="-fx-background-color: white; -fx-border-color: #ccc;" />
                    <ComboBox fx:id="videoResolutionComboBox" promptText="Select Resolution" style="-fx-background-color: white; -fx-border-color: #ccc;" />
                    <ComboBox fx:id="videoSpecialStatusComoBox" prefWidth="150.0" promptText="Select Type" style="-fx-background-color: white; -fx-border-color: #ccc;" />
                    <ComboBox fx:id="videoFormatComboBox" promptText="Select Format" style="-fx-background-color: white; -fx-border-color: #ccc;" />
                    <Button onAction="#publishNormalVideo" style="-fx-background-color: #FF0000; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" text="Publish Video" />
                </VBox>
            <Button layoutX="519.0" layoutY="-4.0" mnemonicParsing="false" onAction="#backToPlaylistPanel" prefHeight="35.0" prefWidth="75.0" style="-fx-background-color: white;" text="❌" textFill="RED">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            </AnchorPane>
        </Tab>

        <Tab text="Podcast">
            <AnchorPane prefHeight="630.0" prefWidth="547.0">
                <VBox layoutY="11.2" prefHeight="563.0" prefWidth="339.0" spacing="15" style="-fx-background-color: #F9F9F9; -fx-padding: 20;" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="11.0">
                    <TextField fx:id="titlePodcast" promptText="Title" style="-fx-border-radius: 5; -fx-padding: 10; -fx-background-color: white; -fx-border-color: #ccc;" />
               <TextField fx:id="creatorPodcast" promptText="Creator" style="-fx-border-radius: 5; -fx-padding: 10; -fx-background-color: white; -fx-border-color: #ccc;" />
                    <TextField fx:id="descriptionPodcast" promptText="Description" style="-fx-border-radius: 5; -fx-padding: 10; -fx-background-color: white; -fx-border-color: #ccc;" />
                    <TextField fx:id="durationPodcast" promptText="Duration" style="-fx-border-radius: 5; -fx-padding: 10; -fx-background-color: white; -fx-border-color: #ccc;" />
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Button fx:id="choosePodcastBtn" onAction="#handleChooseFileForPodcast" style="-fx-background-color: #FF0000; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" text="Choose File" />
                        <Label fx:id="podcastPathLabel" style="-fx-text-fill: #555;" text="No file selected" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Button fx:id="choosePodcastThumbnailBtn" onAction="#handleChooseThumbnailForPodcast" style="-fx-background-color: #FF0000; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" text="Choose Cover" />
                        <Label fx:id="podcastThumbnailPathLabel" style="-fx-text-fill: #555;" text="No cover selected" />
                    </HBox>

                    <ComboBox fx:id="podcastCategoryComboBox" promptText="Select Category" style="-fx-background-color: white; -fx-border-color: #ccc;" />
                    <ComboBox fx:id="podcastSpecialStatusComoBox" prefWidth="150.0" promptText="Select Type" style="-fx-background-color: white; -fx-border-color: #ccc;" />
                    <Button onAction="#publishPodcast" style="-fx-background-color: #FF0000; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" text="Publish Podcast" />
                    <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                </VBox>
            <Button layoutX="509.0" layoutY="-4.0" mnemonicParsing="false" onAction="#backToPlaylistPanel" prefHeight="36.0" prefWidth="93.0" style="-fx-background-color: white;" text="❌" textFill="RED">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            </AnchorPane>
        </Tab>
    </tabs>
</TabPane>
