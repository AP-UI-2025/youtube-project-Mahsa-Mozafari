<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.videoplayer.ViewController.HomeController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="135.0" layoutY="23.0" prefHeight="518.0" prefWidth="646.0" spacing="10.0">
         <children>
            <HBox alignment="TOP_RIGHT" prefHeight="36.0" prefWidth="646.0">
               <children>
                  <TextField fx:id="searchField" prefHeight="26.0" prefWidth="538.0" promptText="search" />
                  <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#onSearch" text="🔎​" />
               </children>
            </HBox>
            <ScrollPane fitToWidth="true" prefHeight="398.0" prefWidth="595.0">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="460.0" prefWidth="558.0">
                     <children>
                        <VBox fx:id="mainContainer" layoutX="112.0" prefHeight="418.0" prefWidth="520.0" />
                     </children>
                  </AnchorPane>
              </content>
            </ScrollPane>
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="542.0" prefWidth="121.0" spacing="30.0" style="-fx-background-color: #1e1e1e;">
         <children>
            <ImageView fitHeight="77.0" fitWidth="94.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="homeBtn" mnemonicParsing="false" style="-fx-background-color: #1e1e1e;" text="🏠" textFill="WHITE">
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
            <Button fx:id="libraryBtn" mnemonicParsing="false" style="-fx-background-color: #1e1e1e;" text="📚" textFill="WHITE">
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
            <Button fx:id="subscriptionBtn" mnemonicParsing="false" style="-fx-background-color: #1e1e1e;" text="📁" textFill="WHITE">
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
            <Button fx:id="channelBtn" mnemonicParsing="false" style="-fx-background-color: #1e1e1e;" text="👤" textFill="WHITE">
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
