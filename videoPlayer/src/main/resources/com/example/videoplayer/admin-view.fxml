<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.videoplayer.Panel.AdminPanel">
    <VBox prefWidth="800" spacing="20">
        <padding>
            <Insets bottom="20" left="30" right="30" top="20" />
        </padding>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-font-weight: bold;" text="❌" textFill="WHITE">
                <font>
                    <Font size="11.0" />
                </font>
            </Button>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #202020;" text="Admin Panel" />
        </HBox>

        <TabPane fx:id="adminTabPane" style="-fx-background-color: #F9F9F9; -fx-border-color: #DDDDDD;" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Users">
                    <TableView fx:id="userTable">
                        <columns>
                            <TableColumn fx:id="usernameCol" prefWidth="110.0" text="Username" />
                            <TableColumn fx:id="fullNameCol" text="Full Name" />
                            <TableColumn fx:id="emailCol" text="Email" />
                            <TableColumn fx:id="phoneCol" text="Phone" />
                        </columns>
                    </TableView>
                </Tab>

                <Tab text="Contents">
                    <TableView fx:id="contentTable">
                        <columns>
                            <TableColumn fx:id="titleCol" text="Title" />
                            <TableColumn fx:id="uploaderCol" text="Uploader" />
                            <TableColumn fx:id="viewsCol" text="Views" />
                            <TableColumn fx:id="likesCol" text="Likes" />
                        </columns>
                    </TableView>
                </Tab>

                <Tab text="Channels">
                    <TableView fx:id="channelTable">
                        <columns>
                            <TableColumn fx:id="channelNameCol" prefWidth="90.0" text="Channel Name" />
                            <TableColumn fx:id="creatorCol" text="Creator" />
                            <TableColumn fx:id="subsCol" text="Subscribers" />
                        </columns>
                    </TableView>
                </Tab>

                <Tab text="Reports">
                    <VBox spacing="10">
                        <TableView fx:id="reportTable">
                            <columns>
                                <TableColumn fx:id="reporterCol" text="Reporter" />
                                <TableColumn fx:id="reportedContentCol" prefWidth="110.0" text="Reported Content" />
                                <TableColumn fx:id="descriptionCol" text="Description" />
                            </columns>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <Button onAction="#handleConfirmReport" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Confirm Report" />
                            <Button onAction="#handleRejectReport" style="-fx-background-color: #ffc107; -fx-text-fill: black;" text="Reject Report" />
                            <Button fx:id="unbanButton" onAction="#handleUnbanUser" style="-fx-background-color: #17a2b8; -fx-text-fill: white;" text="Unban User" />
                        </HBox>
                    </VBox>
                </Tab>
            <Tab text="Charts">
               <content>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <BarChart fx:id="contentBarChart" layoutY="8.0" prefHeight="426.0" prefWidth="346.0">
                          <xAxis>
                            <CategoryAxis side="BOTTOM" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis side="LEFT" />
                          </yAxis>
                        </BarChart>
                        <BarChart fx:id="channelBarChart" layoutX="329.0" layoutY="6.0" prefHeight="428.0" prefWidth="399.0">
                          <xAxis>
                            <CategoryAxis side="BOTTOM" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis side="LEFT" />
                          </yAxis>
                        </BarChart>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>

            </tabs>
        </TabPane>
    </VBox>
</AnchorPane>
